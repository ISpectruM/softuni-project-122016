@model PhotoGallery.Models.UsersViewModel
@{
    ViewBag.Title = "Users list";
}
<div style="">
    <div class="row-new alpha60">
        <div class="row-new">
            <h2>@ViewBag.Title</h2>
            <div>
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Username</th>
                            <th>Images count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Users.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model.Users[i].UserName</td>
                                <td>@Model.ImagesByUser(Model.Users[i]).Count</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
