
@model PhotoGallery.Models.UserDetailsViewModel
@{
    ViewBag.Title = "User Page";
}
<h2>UserPage</h2>

@using (Html.BeginForm("Upload", "Image", null, FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Photo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="Photo" name="upload" />
            </div>
        </div>
        <div class="form-group">
            <div class="btn">
                @Html.ActionLink("Upload", "Upload", "Image", null, new { @class = "btn btn-primary btn-xs" })
v            </div>
        </div>
        <div class="well">
            @*@foreach(var image in Model.Images )
            <div>
                   @image
            </div>*@
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
