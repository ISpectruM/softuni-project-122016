
@model PhotoGallery.Models.UserDetailsViewModel
@{
    ViewBag.Title = "User Page";
}
<h2>UserPage</h2>

@using (Html.BeginForm("Upload", "Image", null, FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Photo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="Photo" name="upload" />
            </div>
        </div>
        <div class="form-group">
            <div class="btn">
                @Html.ActionLink("Upload Photo", "Upload", "Image", null, new { @class = "btn btn-primary btn-xs" })
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Thumbnail Gallery</h1>
                </div>

                @foreach (var image in Model.Images)
                {
                    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                        <a class="thumbnail" href="#">
                            <img class="img-responsive" src="~/Images/@image.Path" alt="image" height="200" width="300"/>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
