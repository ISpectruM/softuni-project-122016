@model PhotoGallery.Models.ImageViewModel
@{
    ViewBag.Title = "List";
}

<h2>List</h2>


<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thumbnail Gallery</h1>
        </div>
        @foreach (var image in Model.Images)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <div class="thumbnail">
                    <a href="@Url.Action("Details","Image", new {id=image.Id})">
                        <img class="img-responsive" src="~/Images/@image.Path" alt="image" height="200" width="300" />
                    </a>
                    <div class="caption">
                        <p>Title: @image.Title</p>
                        <div class="pull-right">
                            <p>Votes:@image.Vote</p>
                        </div>
                        <div>
                            <p>Author: <a href="@Url.Action("Details", "User",new {id=image.Author.Id})">@image.Author.UserName</a></p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

