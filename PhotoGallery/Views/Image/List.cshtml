@model PhotoGallery.Models.ImageViewModel
@{
    ViewBag.Title = null;
}

<div class="container">
    <div class="row-new">
        <div class="col-lg-12">
            <h1 class="page-header">Recent photo`s</h1>
        </div>
        @foreach (var image in Model.Images)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb" style="padding-bottom: 10px" >
                <div class="thumbnail" align="center">
                    <a href="@Url.Action("Details","Image", new {id=image.Id})">
                        <img class="img-responsive" src="~/Images/@image.Path" alt="image" style="max-height: 172px" />
                    </a>
                    <div class="caption" align="left">
                        <p>
                            <b>Title:</b> 
                            <i> @image.Title</i>
                        </p>
                        <div class="pull-right">
                            <p>
                                <b>
                                    Votes:@image.Vote
                                </b>
                            </p>
                        </div>
                        <div>
                            <p>
                                <b>
                                    Author:
                                </b>  
                                <a href="@Url.Action("Details", "User", new {id = image.Author.Id})">@image.Author.UserName</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

